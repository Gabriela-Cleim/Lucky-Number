<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backdois">

    <LinearLayout
        android:id="@+id/primaryLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sortear"
                android:textStyle="bold"
                android:textSize="36sp"/>

            <EditText
                android:id="@+id/edt_one"
                android:layout_width="87dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="número"
                android:textStyle="bold"
                android:textSize="36sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entre"
                android:textStyle="bold"
                android:textSize="36sp"/>

            <EditText
                android:id="@+id/edt_two"
                android:layout_width="87dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e"
                android:textStyle="bold"
                android:textSize="36sp"/>

            <EditText
                android:id="@+id/edt_three"
                android:layout_width="87dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="25sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sortear número"
            android:textSize="25sp"
            android:backgroundTint="#31418F"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondaryLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O número sorteado é: "
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textStyle="bold"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/edtnumSor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="36sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:background="#7A000000"/>


        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:textSize="25sp"
            android:backgroundTint="#31418F"
            android:layout_marginTop="30dp"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>

